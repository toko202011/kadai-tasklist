<h1>タスクリスト</h1>

<!-- ユーザログインの場合 -->
<% if logged_in? %>
  <p>ログイン完了ユーザー：<%= current_user.name %> さん</p>

  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></li>
    <% end %>
  </ul>

  <%= link_to 'タスク登録', new_task_path %>
  <%= link_to 'ログアウト', login_path %>

<% elsif %>
  <!-- ユーザログアウトの場合 -->
  <%= link_to 'ログイン', login_path %>

<% else %>
  <!-- ユーザログアウトもしくは未登録の場合 -->
  <%= link_to 'ユーザ新規登録', signup_path %>

<% end %>
